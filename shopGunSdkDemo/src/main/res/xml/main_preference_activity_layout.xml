<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="SDK Features">

        <Preference
            android:key="pref_main_catalog_list"
            android:title="Catalog list">
            <intent
                android:targetPackage="com.shopgun.android.sdk.demo"
                android:targetClass="com.shopgun.android.sdk.demo.CatalogListActivity"/>
        </Preference>

        <Preference
            android:key="pref_main_offer_list"
            android:title="Offer list">
            <intent
                android:targetPackage="com.shopgun.android.sdk.demo"
                android:targetClass="com.shopgun.android.sdk.demo.OfferListActivity"/>
        </Preference>

        <Preference
            android:key="pref_main_offer_search"
            android:title="Offer search">
            <intent
                android:targetPackage="com.shopgun.android.sdk.demo"
                android:targetClass="com.shopgun.android.sdk.demo.OfferSearchActivity"/>
        </Preference>

        <Preference
            android:key="pref_main_session"
            android:title="Session">
            <intent
                android:targetPackage="com.shopgun.android.sdk.demo"
                android:targetClass="com.shopgun.android.sdk.demo.SessionActivity"/>
        </Preference>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="SDK Tests">

        <Preference
            android:key="pref_main_picasso"
            android:title="Picasso test">
            <intent
                android:targetPackage="com.shopgun.android.sdk.demo"
                android:targetClass="com.shopgun.android.sdk.demo.PicassoActivity"/>
        </Preference>

        <Preference
            android:key="pref_main_sdk_unit_test"
            android:title="SDK Unit Test"/>

        <Preference
            android:key="pref_main_sdk_db_speed"
            android:title="SDK DB Speed"
            android:summary="Test the DB speed">
            <intent
                android:targetPackage="com.shopgun.android.sdk.demo"
                android:targetClass="com.shopgun.android.sdk.demo.DBSpeedTestActivity"/>
        </Preference>

    </PreferenceCategory>

</PreferenceScreen>